#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# SINGLE SOURCE OF TRUTH: TypeScript strict checking
echo "âš¡ Type checking with strict config..."
npx tsc --noEmit --project tsconfig.build.json

# If type check passes, lint staged files
if [ $? -eq 0 ]; then
  echo "ğŸ§¹ Linting staged files..."
  npx lint-staged
else
  echo "âŒ Type check failed - commit blocked"
  exit 1
fi

echo "âœ… Pre-commit checks passed!"